<Window x:Class="Tortuga_DaniilArtyukhov.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tortuga_DaniilArtyukhov.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="903"
        Width="547">
    <Grid RenderTransformOrigin="0.439,0.422">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock 
                    Text="{Binding Path=FoodName}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="Black" 
                    Width="214"
                    FontSize="18"
                    Height="72"
                    TextAlignment="Center"           
                    TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" />
    </Grid>

</Window>
